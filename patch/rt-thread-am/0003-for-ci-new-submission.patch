   // static const char *p = "help\ndate\nversion\nfree\nps\npwd\nls\nmemtrace\nmemcheck\nutest_list\n";
-  char ch = io_read(AM_UART_RX).data;
-  if (ch == (char)-1) return -1;
-  if (ch != 8) putch(ch);
-  return ch;
+  #ifdef NPC_NEMU
+    return getch();
